<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Relatorios</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <%- include('partials/header')%>
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <h1 class="text-center">Relatorio</h1>
                    <table class="table table-dark">
                        <thead>
                            <tr class="text-center">
                                <th scope="col">ID Movimentação</th>
                                <th scope="col">Nome do responsavel</th>
                                <th scope="col">Tipo de movimentação</th>
                                <th scope="col">Quantidade produto</th>
                                <th scope="col">Observação</th>
                                <th scope="col">Data de Movimentação</th>
                                <th scope="col">Nome do produto</th>
                                <th scope="col">Valor R$</th>
                                <th scope="col">Data validade produto</th>
                                <th scope="col">Nome armazem</th>
                                <th scope="col">Endereço armazem</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            <% obj_relatorios.forEach(relatorio=> { %>
                                <tr>
                                    <td>
                                        <%= relatorio.movimentacao_codigo %>
                                    </td>
                                    <td>
                                        <%= relatorio.movimentacao_responsavel %>
                                    </td>
                                    <td>
                                        <%= relatorio.movimentacao_tipo%>
                                    </td>
                                    <td>
                                        <%= relatorio.movimentacao_quantidade %>
                                    </td>
                                    <td>
                                        <%= relatorio.movimentacao_observacao %>
                                    </td>
                                    <td>
                                        <%= relatorio.movimentacao_dataMovimentacao %>
                                    </td>
                                    <td>
                                        <%= relatorio.nome_produto %>
                                    </td>
                                    <td>
                                        <%= relatorio.produto_valor %>
                                    </td>
                                    <td>
                                        <%= relatorio.produto_dataValidade %>
                                    </td>
                                    <td>
                                        <%= relatorio.armazem_nome %>
                                    </td>
                                    <td>
                                        <%= relatorio.armazem_endereco %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
</body>

</html>